#!/bin/sh
#
# Dependencies: ghostscript, tesseract
#
# Note: The plan.txt generated by this script is raw OCR output,
# and has numerous errors. The checked-in plan.txt has been manually
# corrected and formatted.

set -e

ghostscript -dNOPAUSE -dBATCH -sDEVICE=tiffg4 -sOutputFile=scan_%d.tiff plan.pdf
tesseract scan_1.tiff scan_1
tesseract scan_2.tiff scan_2
cat scan_*.txt > plan.txt
